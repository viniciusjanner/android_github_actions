<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Color Primary-->
        <item name="colorPrimary">@color/colorPrimary</item><!--Toolbar-->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item><!--StatusBar-->
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!--Color Secondary-->
        <item name="colorSecondary">@color/colorPrimary</item><!--FloatActionButton-->
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item><!--Icon FloatActionButton-->
        <!--android-->
        <item name="android:breakStrategy" tools:targetApi="m">simple</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:statusBarColor">@color/colorStatusBarLight</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:windowBackground">@color/white</item>
        <!--app-->
        <item name="tint">@color/black</item><!--Icon ImageView-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--Anim-->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/black</item>
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">700</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Home</item>
    </style>

    <style name="Theme.Home" parent="Base.Theme">

    </style>

</resources>
